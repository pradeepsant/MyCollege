<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_details_view"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardMaxElevation="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/Card_Details_Background_Image_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ash"
                android:scaleType="fitXY"/>
            <TextView
                android:text="Hello Card"
                android:layout_marginTop="10dp"
                android:id="@+id/Card_Details_Title_Text_view"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/Card_Details_Background_Image_View"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/Card_Deatils_Descreiption_Text_View"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="gsdgdjhcvvv"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_below="@+id/Card_Details_Title_Text_view"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
