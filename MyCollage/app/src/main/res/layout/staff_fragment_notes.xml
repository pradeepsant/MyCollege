<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:orientation="horizontal">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Notes_class_spinner"
                android:spinnerMode="dialog"
                android:prompt="@string/class_prompt"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:entries="@array/class_spinner"
                android:layout_weight="1">
            </Spinner>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:spinnerMode="dialog"
                android:prompt="@string/subject_prompt"
                android:entries="@array/subject_spinner"
                android:layout_marginLeft="@dimen/normal_margin"
                android:id="@+id/Notes_subject_spinner">

            </Spinner>
        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Notes_title_edit_text"
                android:padding="@dimen/normal_padding"
                android:layout_marginBottom="@dimen/normal_margin"
                android:hint="Title" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_padding"
                android:layout_marginBottom="@dimen/normal_margin"
                android:id="@+id/Notes_provide_link_edit_text"
                android:hint="Provide Link"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_margin">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_padding"
                android:id="@+id/Notes_vedio_URL_edit_text"
                android:layout_marginBottom="@dimen/normal_margin"
                android:hint="Vedio URL"
                />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Notes_Attach_file_button"
                android:text="Attach File"
                android:layout_marginRight="@dimen/normal_margin"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/normal_margin"
                android:background="@color/ColorCollageTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/Notes_attach_file_text_view"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Notes_cancle_button"
                android:text="Cancle"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>